<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @album.name %>
</p>

<p>
  <strong>Photos:</strong>
</p>
  <div>
  <% @album.photos.each_with_index do |photo, index| %>
    <%= image_tag(photo) %>
    <%= link_to 'Destroy', delete_attached_image_album_path(photo), method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
  </div>
<p>
  <strong>Album date:</strong>
  <%= @album.album_date %>
</p>

<div>
<%= link_to 'Edit', edit_album_path(@album) %>
<%= link_to 'Back', albums_path %>
<%= link_to 'Destroy', @album, method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
